<h2 class="blog-post-main-header">Blog Posts</h2>
<div>
    {{#each posts}}
        <section class="blog-post-preview" data-blog-id={{id}}>
            <div class="blog-post-preview-header">
                <h3 class="blog-post-preview-title">{{post_title}}</h3>
            </div>
            <div class="blog-post-preview-body">
                <div class = "user-name">
                    <p>{{userName}}</p>
                </div>
                <div class="post-date">
                    <p>{{date}}</p>
                </div>
            </div>
        </section> 
    {{/each}}
</div>

<script src="/js/linkBlogs.js"></script>